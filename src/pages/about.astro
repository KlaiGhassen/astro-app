<style>
  .team-image {
    transition: transform 0.3s ease-in-out;
    cursor: pointer;
  }

  .team-image.zoomed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    transform: scale(1);
  }

  body.zoomed {
    overflow: hidden;
  }
</style>

<script>
  const teamImage = document.querySelector('.team-image');

  if (teamImage) {
    teamImage.addEventListener('click', () => {
      teamImage.classList.toggle('zoomed');
      document.body.classList.toggle('zoomed');
    });

    document.addEventListener('click', (event) => {
      if (teamImage && !(event.target instanceof Node && teamImage.contains(event.target))) {
        teamImage.classList.remove('zoomed');
        document.body.classList.remove('zoomed');
      }
    });
  }
</script>